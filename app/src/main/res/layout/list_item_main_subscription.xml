<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_subscription_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_insert_emoticon_black_24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_subscription_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subscription name"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textSize="@dimen/heading1_text_size"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorPrimaryBlack"
        app:layout_constraintLeft_toRightOf="@+id/iv_subscription_icon"
        app:layout_constraintRight_toLeftOf="@+id/ibt_cancel_subscription"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/ibt_cancel_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@null"
        android:src="@drawable/ic_cancel_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tv_subscription_charges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rs 199/month"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textSize="@dimen/heading3_text_size"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorSecondaryBlack"
        app:layout_constraintLeft_toRightOf="@+id/iv_subscription_icon"

        app:layout_constraintTop_toBottomOf="@+id/tv_subscription_name"/>

    <TextView
        android:id="@+id/tv_subscription_duedate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Till 15 August, 2019"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textSize="@dimen/heading3_text_size"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorSecondaryBlack"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tv_subscription_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorTertiaryBlack"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>