<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Heading2Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/touche_semibold</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">@dimen/heading2_text_size</item>
    </style>

    <style name="Heading3Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">@dimen/heading3_text_size</item>
    </style>

    <style name="counterText" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/touche_semibold</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="counterOverride" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/touche_semibold</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
